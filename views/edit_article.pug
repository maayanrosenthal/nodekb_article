extends layout

block content
  h1 #{title}
  form(method='POST', action='/article/edit/'+article._id)
    #form-group
      label Title:
      input.form-control(name='title', type='text', value=article.title)
    #form-group
      br
      label Author: #{article.author}
    #form-group
      label Body:
      br
      textarea.form-control(name='body', type='text', value=article.body)
    input.btn.btn-primary(type='submit', value='Submit')
